<%= simple_form_for @event, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :name %>
  <%= f.input :start_at %>
  <%= f.input :end_at %>
  <%= f.input :location %>
  <%= f.input :description %>
  <%= f.input :all_day %>
  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                events_path, :class => 'btn' %>

<% end %>
