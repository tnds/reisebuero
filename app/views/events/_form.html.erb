<%#= javascript_include_tag UiDatePickerRails3.ui_localizers :de %>
<%= simple_form_for @event, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :name %>
  <%= f.input :start_at#, :as => :ui_date_time_picker %>
  <%= f.input :end_at#, :as => :ui_date_time_picker %>
  <%= f.input :location %>
  <%= f.input :description %>
  <%= f.input :all_day %>
  <%= f.button :submit, :input_html => { :class => 'btn btn-primary' } %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                events_path, :class => 'btn' %>

<% end %>
