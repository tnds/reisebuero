<%- model_class = Event -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<h2>
  <%= @event.name %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_event_path(@event), :class => 'btn btn-mini' if can? :edit, @event %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              event_path(@event),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-mini btn-danger' if can? :destroy, @event %>
</h2>
<p>
	<%= raw(display_time_event(@event)) %> 
	<% if @event.all_day %>
          (<%=t('all_day')%>)
	<% end %>
</p>

<p>
  <b><%=t('location')%>:</b>
  <%= @event.location %>
</p>

<p>
  <b><%=t('description')%>:</b>
  <%= @event.description %>
</p>

<% if can? :read, EventHelper %>
<div id="event_orgas">
  <h3><%= t('event_orgas') %></h3>
  <ul>
    <%= render :partial => 'event_helpers/event_helper', :collection => @orgas, :locals => { :user_is_orga => @user_is_orga} %>
  </ul>
</div>

<div id="event_helpers">
  <h3><%= t('event_helpers') %></h3>
  <ul>
    <%= render :partial => 'event_helpers/event_helper', :collection => @helpers, :locals => { :user_is_orga => @user_is_orga} %>
  </ul>
  <% if can? :create, EventHelper and not @user_is_helper %>
    <%= form_for([@event, @event.event_helpers.build]) do |helper_form| %>
      <div class="action">
        <%= helper_form.submit t('helper_submit') %>
      </div>
    <% end %>
  <% end %>
</div>
<% end %>

<div class="row">
  <% if can? :read, Lodging %>

  <div id="lodgings" class="span6">
    <h3><%= t('lodgings') %></h3>
    <ul>
      <%= render :partial => 'lodgings/lodging', :collection => @lodgings %>
    </ul>
    <p>
      <%= link_to t('new_lodging'), new_lodging_path(:event => @event.id, :request => false, :start_at => @event.start_at, :end_at => @event.end_at) %>
    </p>
  </div>

  <div id="lodging_requests" class="span6">
    <h3><%= t('lodging_requests') %></h3>
    <ul>
      <%= render :partial => 'lodgings/lodging', :collection => @lodging_requests %>
    </ul>
    <p>
      <%= link_to t('new_lodging_request'), new_lodging_path(:event => @event.id, :request => true, :start_at => @event.start_at, :end_at => @event.end_at) %>
    </p>
  </div>
</div>
<% end %>